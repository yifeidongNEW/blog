<h1>文章列表</h1>

<table>
  <tr>
    <th>id</th>
    <th>标题</th>
    <th>作者</th>
    <th>创建时间</th>
  </tr>

  <% @articles.each do |article| %>
    <% if (article.isprivate == false) then %>
      <tr>
        <td><%= article.id %></td>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= article.author_name %></td>
        <td><%= article.create_time %></td>
      </tr>
    <% end %>
  <% end %>
</table>

<div>
  <br/>
  <%= link_to '新文章', articles_new_path %>
</div>